[core]
	excludesfile = ~/.gitignore
	editor = vim
	compression = 0

[alias]
	publish = "!f() { git push -u origin $1; }; f"

[init]
	defaultBranch = main

[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[push]
	autoSetupRemote = true
