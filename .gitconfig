[core]
	excludesfile = ~/.gitignore
	editor = vim
	compression = 0

[init]
	defaultBranch = main

[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[push]
	autoSetupRemote = true
[credential]
	helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
[pull]
	rebase = true
